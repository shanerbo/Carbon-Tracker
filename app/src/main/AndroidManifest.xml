<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.olive.carbon_tracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenu" />
        <activity android:name=".DisplayCarbonFootprint" />
        <activity android:name=".PieChart" />
        <activity android:name=".CreateNewJourney" />
        <activity
            android:name=".DisplayRouteList"
            android:label="@string/title_activity_display_route_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddNewRoute"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.olive.carbon_tracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.MainMenu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.DisplayRouteList"
            android:label="@string/title_activity_display_route_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.AddNewRoute" />
        <activity
            android:name=".UI.AddCar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.DisplayCarList"
            android:label="@string/title_activity_display_car_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.Chart" />
        <activity
            android:name=".UI.SelectTransportationModeAndDate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.DisplayJourneyList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.GraphPicker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.SingleDayGraph" />
        <activity android:name=".UI.MonthGraph" />
        <activity android:name=".UI.YearGraph" />

        <activity android:name=".UI.DisplayCalendar"/>

        <activity
            android:name=".UI.AddMonthlyUtilities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.DisplayMonthlyUtilities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:process=":remote" android:name=".Model.AlarmReceiver" ></receiver>
    </application>

</manifest>
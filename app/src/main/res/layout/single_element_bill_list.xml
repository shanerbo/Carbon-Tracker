<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/IndGasUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/IndElecUsage"
        android:layout_below="@+id/IndElecUsage"
        android:text="@string/_0_0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/StartingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:text="@string/dd_mm_yyyy" />

    <TextView
        android:id="@+id/EndingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/StartingDate"
        android:layout_below="@+id/StartingDate"
        android:text="@string/dd_mm_yyyy" />

    <TextView
        android:id="@+id/IndElecUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EndingDate"
        android:layout_below="@+id/EndingDate"
        android:text="@string/_0_0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/IndCO2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/IndGasUsage"
        android:layout_below="@+id/IndGasUsage"
        android:text="@string/_0_0"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/BillImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription=""
        app:srcCompat="@drawable/bills"
        android:layout_alignBottom="@+id/IndCO2"
        android:layout_toStartOf="@+id/IndGasUsage" />


</RelativeLayout>

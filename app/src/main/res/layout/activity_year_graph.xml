<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olive.carbon_tracker.UI.YearGraph">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtcurrentDate_YearGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnChangeDate_YearGraph"
        android:layout_alignBottom="@+id/btnChangeDate_YearGraph"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@android:color/holo_blue_bright"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnChangeDate_YearGraph"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_below="@+id/btnChangeDate_YearGraph"
        android:layout_centerHorizontal="true">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart3"
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:layout_alignParentBottom="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart_year"
            android:layout_width="368dp"
            android:layout_height="455dp"


            />
    </LinearLayout>
</RelativeLayout>

</ScrollView>

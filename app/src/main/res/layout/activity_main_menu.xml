<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.olive.carbon_tracker.UI.MainMenu">

    <TextView
        android:id="@+id/txtMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnCreateJourney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_journey"
        android:layout_marginEnd="23dp"
        android:layout_alignBaseline="@+id/btnCurrentFootprint"
        android:layout_alignBottom="@+id/btnCurrentFootprint"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnCurrentFootprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carbon_footprint"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="16dp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/totalDistanceWImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IndElecUsage"
        android:layout_toEndOf="@+id/RouteImage"
        android:text="@string/tempTotalDst"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/StartingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/RouteImage"
        android:text="@string/tempRouteName"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/EndingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StartingDate"
        android:layout_toEndOf="@+id/RouteImage"
        android:text="@string/tempCityDst"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/RouteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/route66"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_alignBottom="@+id/totalDistanceWImage"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/IndElecUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EndingDate"
        android:layout_toEndOf="@+id/RouteImage"
        android:text="@string/tempHwatDst"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

</RelativeLayout>
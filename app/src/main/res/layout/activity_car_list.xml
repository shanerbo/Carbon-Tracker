<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olive.carbon_tracker.UI.CarList">

    <TextView
        android:id="@+id/ID_select_trans_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Transportation Mode"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/ID_Car_List"
        android:layout_width="365dp"
        android:layout_height="386dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="49dp"
        android:layout_below="@+id/ID_select_trans_mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/ID_add_new_car_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_Car_List"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:text="Add Car"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="447dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olive.carbon_tracker.UI.MonthGraph">


    <Button
        android:id="@+id/btnCalendar_MonthGraph"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="25dp"
        android:layout_marginEnd="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart2"
        android:layout_height = "495dp"
        android:layout_width = "368dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/btnCalendar_MonthGraph" />


    <TextView
        android:id="@+id/txtCurrentData_MonthGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/btnCalendar_MonthGraph"
        android:background="@android:color/holo_blue_bright"
        android:text="@string/dd_mm_yyyy"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="41dp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCalendar_MonthGraph"
        android:layout_alignBottom="@+id/btnCalendar_MonthGraph"
        android:layout_marginEnd="70dp"
        android:layout_toStartOf="@+id/txtCurrentData_MonthGraph"
        android:fontFamily="serif"
        android:text="@string/co2_emitted"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_date_to_change"
        android:textSize="8sp"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        tools:ignore="SmallSp" />
</RelativeLayout>
